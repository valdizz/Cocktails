<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/small_interval"
              tools:ignore="UseCompoundDrawables">

    <ImageView
            android:id="@+id/iv_ingredient"
            android:layout_width="@dimen/image_item_size"
            android:layout_height="@dimen/image_item_size"
            android:layout_marginStart="@dimen/small_interval"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/ingredient_image"/>

    <TextView
            android:id="@+id/tv_ingredient"
            tools:text="Vodka"
            android:textSize="@dimen/upper_middle_text_size"
            android:paddingStart="@dimen/middle_interval"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry"/>
</LinearLayout>